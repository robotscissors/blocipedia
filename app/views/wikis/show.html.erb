<h1><%= @wiki.title %></h1>
<div class="row">
  <div class="col-md-8">
    <p><%= markdown(@wiki.body).html_safe %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@wiki).update? %>
      <%= link_to "Edit", edit_wiki_path(@wiki), class: "btn btn-success" %>
    <% end %>
    <%= link_to "Delete", @wiki, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this entry?' } %>
  </div>
</div>
